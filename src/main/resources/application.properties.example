# Example application properties for local development
spring.application.name=library-app

# Pretty print JSON in responses
spring.jackson.serialization.indent_output=true

# MySQL DataSource Configuration (replace placeholders or use env vars)
spring.datasource.url=jdbc:mysql://localhost:3306/library_db
spring.datasource.username=library_user
spring.datasource.password=change_me
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Optional: Connection Pool Settings (HikariCP)
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5
